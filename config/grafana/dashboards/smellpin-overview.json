{
  "dashboard": {
    "id": null,
    "title": "SmellPin 系统概览",
    "tags": ["smellpin", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统状态",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"smellpin-backend\"}",
            "legendFormat": "服务状态"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "离线"}, "1": {"text": "在线"}}}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "请求量 (QPS)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "每秒请求数"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "响应时间 (P95)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 响应时间"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.2},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "错误率",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "错误率"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP 请求趋势",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "总请求数"
          },
          {
            "expr": "rate(http_requests_total{status=~\"2..\"}[5m])",
            "legendFormat": "成功请求"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "客户端错误"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "服务器错误"
          }
        ],
        "yAxes": [
          {"label": "请求/秒", "min": 0}
        ]
      },
      {
        "id": 6,
        "title": "响应时间分布",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.90, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P90"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {"label": "响应时间 (秒)", "min": 0}
        ]
      },
      {
        "id": 7,
        "title": "系统资源使用率",
        "type": "graph",
        "gridPos": {"h": 9, "w": 8, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU 使用率"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "内存使用率"
          }
        ],
        "yAxes": [
          {"label": "使用率 (%)", "min": 0, "max": 100}
        ]
      },
      {
        "id": 8,
        "title": "数据库连接数",
        "type": "graph",
        "gridPos": {"h": 9, "w": 8, "x": 8, "y": 17},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "活跃连接数"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "最大连接数"
          }
        ],
        "yAxes": [
          {"label": "连接数", "min": 0}
        ]
      },
      {
        "id": 9,
        "title": "Redis 状态",
        "type": "graph",
        "gridPos": {"h": 9, "w": 8, "x": 16, "y": 17},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "连接客户端数"
          },
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "内存使用 (MB)"
          }
        ],
        "yAxes": [
          {"label": "数量/大小", "min": 0}
        ]
      },
      {
        "id": 10,
        "title": "业务指标",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 26},
        "collapsed": false
      },
      {
        "id": 11,
        "title": "用户注册数",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 27},
        "targets": [
          {
            "expr": "increase(user_registrations_total[1h])",
            "legendFormat": "过去1小时注册数"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 12,
        "title": "标注创建数",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 27},
        "targets": [
          {
            "expr": "increase(annotations_created_total[1h])",
            "legendFormat": "过去1小时创建数"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 13,
        "title": "LBS 发现数",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 27},
        "targets": [
          {
            "expr": "increase(lbs_discoveries_total[1h])",
            "legendFormat": "过去1小时发现数"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 14,
        "title": "支付成功率",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 27},
        "targets": [
          {
            "expr": "rate(payment_success_total[5m]) / rate(payment_attempts_total[5m]) * 100",
            "legendFormat": "支付成功率"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"smellpin-backend\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "部署事件",
          "datasource": "Prometheus",
          "expr": "deployment_timestamp",
          "titleFormat": "部署",
          "textFormat": "版本: {{version}}"
        }
      ]
    }
  }
}