# 服务器配置
PORT=3000
NODE_ENV=development
API_VERSION=v1

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/smellpin
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smellpin
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12

# 文件上传配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smellpin-uploads
MAX_FILE_SIZE=10485760
# 10MB in bytes

# 支付配置
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@smellpin.com
FROM_NAME=SmellPin

# 地图服务配置
# OpenStreetMap + Mapbox配置
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-access-token
NEXT_PUBLIC_OSM_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org
# 高德地图备用配置
AMAP_KEY=your-amap-key
AMAP_SECRET=your-amap-secret
# 百度地图备用配置
BAIDU_MAP_AK=your-baidu-map-ak
BAIDU_MAP_SK=your-baidu-map-sk

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# 监控配置
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# CORS配置
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# 应用配置
APP_NAME=SmellPin
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# 缓存配置
CACHE_TTL=3600
# 1 hour in seconds
CACHE_MAX_ITEMS=1000

# 队列配置
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5

# 安全配置
SESSION_SECRET=your-session-secret-key
CSRF_SECRET=your-csrf-secret-key
HELMET_CSP_DIRECTIVES=default-src 'self'

# 分析配置
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# 第三方服务配置
WEATHER_API_KEY=your-weather-api-key
GEOLOCATION_API_KEY=your-geolocation-api-key

# 开发配置
DEBUG=smellpin:*
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs

# 测试配置
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/smellpin_test
TEST_REDIS_URL=redis://localhost:6379/15