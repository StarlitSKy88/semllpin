# SmellPin Staging Environment Configuration
NODE_ENV=staging
APP_NAME=SmellPin-Staging
APP_URL=https://staging.smellpin.com
API_URL=https://staging-api.smellpin.com
PORT=3000

# Database Configuration
DB_TYPE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=smellpin_staging
DB_USER=smellpin
DB_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_REDIS_PASSWORD_HERE
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# JWT Configuration
JWT_SECRET=GENERATE_JWT_SECRET_HERE_MIN_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration (Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_TEST_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_TEST_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_TEST_WEBHOOK_SECRET
STRIPE_ENVIRONMENT=test

# PayPal Configuration (Sandbox)
PAYPAL_CLIENT_ID=YOUR_PAYPAL_SANDBOX_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_SANDBOX_CLIENT_SECRET
PAYPAL_ENVIRONMENT=sandbox

# Map Services Configuration
# OpenStreetMap + Mapbox
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.YOUR_STAGING_MAPBOX_ACCESS_TOKEN
NEXT_PUBLIC_OSM_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org
# Alternative map services
AMAP_KEY=YOUR_AMAP_API_KEY
BAIDU_MAP_AK=YOUR_BAIDU_MAP_AK

# CDN Configuration
CDN_BASE_URL=https://staging-cdn.smellpin.com
CDN_ACCESS_KEY=YOUR_CDN_ACCESS_KEY
CDN_SECRET_KEY=YOUR_CDN_SECRET_KEY
CDN_BUCKET=smellpin-staging-uploads

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=YOUR_MAILTRAP_USER
SMTP_PASS=YOUR_MAILTRAP_PASSWORD
SMTP_FROM=SmellPin Staging <staging@smellpin.com>

# Monitoring Configuration
SENTRY_DSN=https://YOUR_SENTRY_DSN_FOR_STAGING
PROMETHEUS_ENABLED=true
LOG_LEVEL=debug
GRAFANA_PASSWORD=GENERATE_GRAFANA_PASSWORD_HERE

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://staging.smellpin.com
COOKIE_SECRET=GENERATE_COOKIE_SECRET_HERE

# SSL Configuration (Let's Encrypt staging)
SSL_CERT_PATH=/etc/ssl/certs/staging.smellpin.com.crt
SSL_KEY_PATH=/etc/ssl/private/staging.smellpin.com.key

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,video/mp4
UPLOAD_DIR=/app/uploads

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Third-party Services
GEOCODING_SERVICE=nominatim
ANALYTICS_ID=STAGING_ANALYTICS_ID