# 生产环境配置模板
# 请复制此文件为 .env.prod 并填入实际值

# 应用配置
NODE_ENV=production
PORT=3000
APP_NAME=SmellPin
APP_VERSION=1.0.0
APP_URL=https://your-domain.com

# 数据库配置
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://smellpin:${DB_PASSWORD}@postgres:5432/smellpin_prod

# Redis配置
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT密钥（请生成一个强密钥）
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# Stripe支付配置
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# CDN配置
CDN_BASE_URL=https://cdn.your-domain.com
CDN_ACCESS_KEY=your_cdn_access_key
CDN_SECRET_KEY=your_cdn_secret_key
CDN_BUCKET=smellpin-uploads
CDN_REGION=us-east-1

# 邮件服务配置
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=SmellPin

# 监控配置
GRAFANA_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION=15d

# SSL证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# 安全配置
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 文件上传配置
UPLOAD_MAX_SIZE=20971520  # 20MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm

# 缓存配置
CACHE_TTL_DEFAULT=3600    # 1小时
CACHE_TTL_STATIC=86400    # 24小时
CACHE_TTL_API=300         # 5分钟

# 性能配置
CLUSTER_WORKERS=0         # 0表示使用CPU核心数
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=60000

# 第三方服务配置
# 地图服务配置
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_production_mapbox_access_token
NEXT_PUBLIC_OSM_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org
# 备用地图服务
AMAP_KEY=your_amap_api_key
BAIDU_MAP_AK=your_baidu_map_ak
# 其他第三方服务
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# 备份配置
BACKUP_S3_BUCKET=smellpin-backups
BACKUP_S3_ACCESS_KEY=your_backup_s3_access_key
BACKUP_S3_SECRET_KEY=your_backup_s3_secret_key
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点

# 告警配置
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
ALERT_EMAIL=admin@your-domain.com

# 分析配置
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=https://your-sentry-dsn

# 功能开关
FEATURE_PAYMENT_ENABLED=true
FEATURE_SOCIAL_ENABLED=true
FEATURE_ADMIN_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true