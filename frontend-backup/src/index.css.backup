    padding: var(--space-8) var(--space-4);
  }

  .features-grid {
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  .feature-card {
    padding: var(--space-6);
    text-align: center;
  }

  .feature-icon {
