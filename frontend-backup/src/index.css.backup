/* 所有 @import 语句必须在最前面 */
@import 'leaflet/dist/leaflet.css';
@import './styles/design-tokens.css';
@import './styles/global.css';

/* Tailwind 和插件配置 */
@plugin "tailwindcss-animate";
@custom-variant dark (&:is(.dark *));
@tailwind base;
@tailwind components;
@tailwind utilities;

/* ==========================================================================
   全局基础样式 (Global Base Styles)
   基于设计令牌系统
   ========================================================================== */

* {
  box-sizing: border-box;
}

html {
  font-size: 16px;
  line-height: var(--leading-normal);
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  scroll-behavior: smooth;
}

body {
  margin: 0;
  padding: 0;
  font-family: var(--font-sans);
  font-size: var(--text-base);
  font-weight: var(--font-normal);
  line-height: var(--leading-normal);
  color: var(--text-primary);
  background-color: var(--bg-primary);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  overflow-x: hidden;
}

/* ==========================================================================
   现代化动画效果 (Modern Animations)
   参考Apple和OpenAI的设计风格
   ========================================================================== */

/* 粒子浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
    opacity: 0.7;
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
    opacity: 1;
  }
}

/* 渐变背景动画 */
@keyframes gradientShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.8;
  }
}

/* 滑入动画 */
@keyframes slideInUp {
  from {
    transform: translateY(30px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 缩放动画 */
@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 现代化按钮悬停效果 */
.modern-button {
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modern-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.modern-button:hover::before {
  left: 100%;
}

/* 卡片悬停效果 */
.modern-card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: center;
}

.modern-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

/* 渐变文字效果 */
.gradient-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 玻璃态效果 */
.glass-effect {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* 滚动动画 */
.scroll-animate {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.scroll-animate.in-view {
  opacity: 1;
  transform: translateY(0);
}

/* ==========================================================================
   城市背景和雾气效果 (City Background & Fog Effects)
   ========================================================================== */

/* 城市幻灯片样式 */
.city-slideshow {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.city-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0;
  transition: opacity 1.5s ease-in-out;
}

.city-slide.active {
  opacity: 1;
}

/* 雾气层样式 */
.fog-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 25%,
    rgba(255, 255, 255, 0.2) 50%,
    rgba(255, 255, 255, 0.1) 75%,
    transparent 100%
  );
  animation: fog-drift 20s linear infinite;
  pointer-events: none;
}

.fog-layer-1 {
  animation-duration: 25s;
  opacity: 0.6;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.08) 25%,
    rgba(255, 255, 255, 0.15) 50%,
    rgba(255, 255, 255, 0.08) 75%,
    transparent 100%
  );
}

.fog-layer-2 {
  animation-duration: 35s;
  animation-delay: -10s;
  opacity: 0.4;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.05) 25%,
    rgba(255, 255, 255, 0.12) 50%,
    rgba(255, 255, 255, 0.05) 75%,
    transparent 100%
  );
}

.fog-layer-3 {
  animation-duration: 45s;
  animation-delay: -20s;
  opacity: 0.3;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.03) 25%,
    rgba(255, 255, 255, 0.08) 50%,
    rgba(255, 255, 255, 0.03) 75%,
    transparent 100%
  );
}

@keyframes fog-drift {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(0%);
  }
}

/* ==========================================================================
   兼容性变量映射 (Legacy Variable Mapping)
   保持向后兼容性的同时逐步迁移到新的设计令牌
   ========================================================================== */

:root {
  /* 兼容旧的变量名 - 映射到新的设计令牌 */
  --primary-color: var(--interactive-primary);
  --primary-hover: var(--interactive-primary-hover);
  --primary-active: var(--interactive-primary-active);
  --accent-primary: var(--color-accent-500);
  --accent-secondary: var(--color-primary-500);
  --border-color: var(--border-primary);
  --shadow-color: rgba(0, 0, 0, 0.5);
  --radius: 0.625rem;
  --background: oklch(1 0 0);
  --foreground: oklch(0.147 0.004 49.25);
  --card: oklch(1 0 0);
  --card-foreground: oklch(0.147 0.004 49.25);
  --popover: oklch(1 0 0);
}

/* ==========================================================================
   v0.dev 现代首页效果 (Modern Homepage Effects)
   城市幻灯片和雾气动画效果
   ========================================================================== */

/* 城市幻灯片效果 */
.city-slideshow {
  position: relative;
  width: 100%;
  height: 100%;
}

.city-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0;
  animation: citySlideshow 25s infinite;
}

.city-slide:nth-child(1) {
  animation-delay: 0s;
}
.city-slide:nth-child(2) {
  animation-delay: 5s;
}
.city-slide:nth-child(3) {
  animation-delay: 10s;
}
.city-slide:nth-child(4) {
  animation-delay: 15s;
}
.city-slide:nth-child(5) {
  animation-delay: 20s;
}

@keyframes citySlideshow {
  0%,
  16%,
  100% {
    opacity: 0;
  }
  20%,
  80% {
    opacity: 1;
  }
}

/* 雾气效果 */
.fog-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: radial-gradient(
    ellipse at center,
    rgba(255, 255, 255, 0.3) 0%,
    rgba(255, 255, 255, 0.1) 30%,
    transparent 70%
  );
  pointer-events: none;
}

.fog-layer-1 {
  animation: fogDrift1 20s ease-in-out infinite;
  opacity: 0.6;
}

.fog-layer-2 {
  animation: fogDrift2 25s ease-in-out infinite;
  opacity: 0.4;
  animation-delay: -5s;
}

.fog-layer-3 {
  animation: fogDrift3 30s ease-in-out infinite;
  opacity: 0.3;
  animation-delay: -10s;
}

@keyframes fogDrift1 {
  0%,
  100% {
    transform: translateX(-50%) translateY(0px);
  }
  50% {
    transform: translateX(-30%) translateY(-20px);
  }
}

@keyframes fogDrift2 {
  0%,
  100% {
    transform: translateX(-60%) translateY(10px);
  }
  50% {
    transform: translateX(-20%) translateY(-10px);
  }
}

@keyframes fogDrift3 {
  0%,
  100% {
    transform: translateX(-40%) translateY(-5px);
  }
  50% {
    transform: translateX(-70%) translateY(15px);
  }
}

/* ==========================================================================
   组件样式 (Component Styles)
   基于设计令牌的组件样式定义
   ========================================================================== */

/* 按钮组件样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--color-accent-500) 0%, var(--color-primary-500) 100%);
  border: none;
  color: var(--text-primary);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-xl);
  font-family: var(--font-sans);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  line-height: var(--leading-normal);
  transition: all var(--duration-300) var(--ease-out);
  box-shadow: var(--shadow-glow);
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 44px; /* 触摸目标最小尺寸 */
  text-decoration: none;
}

@media (min-width: 640px) {
  .btn-primary {
    padding: var(--space-3) var(--space-5);
  }
}

@media (min-width: 1024px) {
  .btn-primary {
    padding: var(--space-3) var(--space-6);
  }
}

.btn-primary:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: var(--shadow-glow-lg);
  background: linear-gradient(135deg, var(--color-accent-600) 0%, var(--color-primary-600) 100%);
}

.btn-primary:active {
  transform: translateY(0) scale(0.98);
  transition-duration: var(--duration-100);
}

.btn-primary:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.btn-secondary {
  background: var(--bg-tertiary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-xl);
  font-family: var(--font-sans);
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  line-height: var(--leading-normal);
  transition: all var(--duration-300) var(--ease-out);
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 44px;
  text-decoration: none;
}

@media (min-width: 640px) {
  .btn-secondary {
    padding: var(--space-3) var(--space-5);
  }
}

@media (min-width: 1024px) {
  .btn-secondary {
    padding: var(--space-3) var(--space-6);
  }
}

.btn-secondary:hover {
  background: var(--interactive-secondary-hover);
  border-color: var(--interactive-secondary);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-secondary:active {
  transform: translateY(0);
  transition-duration: var(--duration-100);
}

.btn-secondary:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

/* 卡片组件样式 */
.card {
  background: var(--bg-glass);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-2xl);
  padding: var(--space-4);
  transition: all var(--duration-300) var(--ease-out);
  box-shadow: var(--shadow-xl);
  position: relative;
}

@media (min-width: 640px) {
  .card {
    padding: var(--space-6);
  }
}

@media (min-width: 1024px) {
  .card {
    padding: var(--space-8);
  }
}

.card:hover {
  transform: translateY(-4px) scale(1.01);
  box-shadow: var(--shadow-2xl);
  border-color: var(--interactive-secondary);
}

.card:focus-within {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.funny-card {
  background: linear-gradient(135deg, 
    rgba(217, 70, 239, 0.1) 0%, 
    rgba(139, 92, 246, 0.1) 100%);
  border: 1px solid rgba(217, 70, 239, 0.3);
  border-radius: var(--radius-3xl);
  padding: var(--space-5);
  transition: all var(--duration-300) var(--ease-bounce);
  position: relative;
  overflow: hidden;
}

.funny-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(217, 70, 239, 0.05) 0%, 
    rgba(139, 92, 246, 0.05) 100%);
  z-index: -1;
  transition: opacity var(--duration-300) var(--ease-out);
}

.funny-card:hover {
  transform: scale(1.02);
  border-color: rgba(217, 70, 239, 0.5);
  box-shadow: var(--shadow-glow);
}

.funny-card:hover::before {
  opacity: 1.5;
}

/* 恶搞标记样式 */
.prank-marker {
  background: linear-gradient(45deg, var(--color-error-500), var(--color-warning-500));
  border-radius: var(--radius-full);
  width: 44px; /* 最小触摸目标 */
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-primary);
  font-weight: var(--font-bold);
  font-size: var(--text-sm);
  box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
  cursor: pointer;
  transition: all var(--duration-300) var(--ease-bounce);
  border: 2px solid transparent;
}

.prank-marker:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 20px rgba(239, 68, 68, 0.6);
  border-color: var(--color-error-300);
}

.prank-marker:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.prank-marker:active {
  transform: scale(0.95);
  transition-duration: var(--duration-100);
}

@layer utilities {
  .text-shadow {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .glass-effect {
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.8);
  }
}

/* 动画效果 */
/* ==========================================================================
   动画效果 (Animation Effects)
   基于设计令牌的动画系统
   ========================================================================== */

@keyframes bounce-in {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(var(--space-8));
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slide-in-left {
  from {
    opacity: 0;
    transform: translateX(-var(--space-8));
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slide-in-right {
  from {
    opacity: 0;
    transform: translateX(var(--space-8));
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 动画类 */
.bounce-in {
  animation: bounce-in var(--duration-500) var(--ease-bounce);
}

.slide-up {
  animation: slide-up var(--duration-300) var(--ease-out);
}

.fade-in {
  animation: fade-in var(--duration-300) var(--ease-out);
}

.slide-in-left {
  animation: slide-in-left var(--duration-300) var(--ease-out);
}

.slide-in-right {
  animation: slide-in-right var(--duration-300) var(--ease-out);
}

.pulse {
  animation: pulse var(--duration-1000) var(--ease-in-out) infinite;
}

.spin {
  animation: spin var(--duration-1000) var(--ease-linear) infinite;
}

/* ==========================================================================
   桌面端响应式布局优化 (Desktop Responsive Layout Optimization)
   ========================================================================== */

/* Container and layout utilities */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 0.75rem;
  overflow-x: hidden;
}

@media (min-width: 640px) {
  .container {
    padding: 0 1rem;
    max-width: 640px;
  }
}

@media (min-width: 768px) {
  .container {
    max-width: 768px;
    padding: 0 1.5rem;
  }
}

@media (min-width: 1024px) {
  .container {
    max-width: 1024px;
    padding: 0 2rem;
  }
}

@media (min-width: 1280px) {
  .container {
    max-width: 1280px;
  }
}

/* 溢出处理工具类 */
.overflow-hidden {
  overflow: hidden;
}

.overflow-x-hidden {
  overflow-x: hidden;
}

.overflow-y-hidden {
  overflow-y: hidden;
}

.overflow-auto {
  overflow: auto;
}

.overflow-x-auto {
  overflow-x: auto;
}

.overflow-y-auto {
  overflow-y: auto;
}

/* 文本截断工具类 */
.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-1 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.line-clamp-2 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.line-clamp-3 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

/* 桌面端容器样式 */
@media (min-width: 768px) {
  .desktop-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-8) var(--space-6);
  }

  .desktop-card {
    max-width: 500px;
    margin: 0 auto;
    padding: var(--space-8);
  }

  .desktop-form {
    max-width: 400px;
    margin: 0 auto;
  }

  /* 桌面端按钮样式 */
  .btn-primary,
  .btn-secondary {
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-lg);
    min-height: 48px;
  }

  /* 桌面端输入框样式 */
  .desktop-input {
    padding: var(--space-4);
    font-size: var(--text-base);
    border-radius: var(--radius-lg);
  }

  /* 桌面端标题样式 */
  .desktop-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-8);
  }

  .desktop-subtitle {
    font-size: var(--text-xl);
    margin-bottom: var(--space-6);
  }

  /* 桌面端间距优化 */
  .desktop-spacing {
    gap: var(--space-6);
  }

  .desktop-spacing-lg {
    gap: var(--space-8);
  }

  /* 桌面端网格布局 */
  .desktop-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .desktop-grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
  }

  /* 桌面端地图布局 */
  .desktop-map-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--space-6);
    height: calc(100vh - 120px);
  }

  .desktop-map-sidebar {
    overflow-y: auto;
    padding: var(--space-6);
    background: var(--bg-secondary);
    border-radius: var(--radius-xl);
  }
}

/* 大屏幕优化 */
@media (min-width: 1024px) {
  .desktop-container {
    max-width: 1400px;
    padding: var(--space-12) var(--space-8);
  }

  .desktop-card {
    max-width: 600px;
    padding: var(--space-12);
  }

  .desktop-title {
    font-size: var(--text-4xl);
  }

  .desktop-map-layout {
    grid-template-columns: 1fr 500px;
    gap: var(--space-8);
  }
}

/* 超大屏幕优化 */
@media (min-width: 1440px) {
  .desktop-container {
    max-width: 1600px;
  }

  .desktop-map-layout {
    grid-template-columns: 1fr 600px;
  }
}

/* ==========================================================================
   首页响应式设计优化
   ========================================================================== */

/* 移动端首页优化 */
@media (max-width: 767px) {
  /* 英雄区域移动端优化 */
  .hero-section {
    padding: var(--space-8) var(--space-4);
    min-height: 60vh;
  }

  .hero-title {
    font-size: var(--text-3xl);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-4);
  }

  .hero-subtitle {
