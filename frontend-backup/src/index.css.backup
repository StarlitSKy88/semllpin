    gap: var(--space-6);
    max-width: 800px;
    margin: 0 auto;
  }

  /* 功能展示平板端优化 */
  .features-section {
    padding: var(--space-12) var(--space-6);
  }

  .features-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
    max-width: 800px;
    margin: 0 auto;
  }

  .features-grid .feature-card:last-child {
    grid-column: 1 / -1;
    max-width: 400px;
