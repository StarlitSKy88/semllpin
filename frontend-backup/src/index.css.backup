    gap: var(--space-3);
    width: 100%;
  }

  .hero-buttons .modern-button {
    width: 100%;
    justify-content: center;
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-base);
  }

  /* 统计卡片移动端优化 */
