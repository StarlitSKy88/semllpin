  }

  /* 用户状态区域平板端优化 */
  .user-status-section {
    padding: var(--space-8) var(--space-6);
  }

  .user-actions {
    flex-direction: row;
    gap: var(--space-4);
    justify-content: center;
  }
}

/* 桌面端首页优化 */
@media (min-width: 1024px) {
  /* 英雄区域桌面端优化 */
  .hero-section {
    padding: var(--space-16) var(--space-8);
    min-height: 80vh;
  }

  .hero-title {
    font-size: var(--text-5xl);
