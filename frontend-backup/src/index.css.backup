  }

  .hero-buttons .modern-button {
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-lg);
    min-width: 180px;
  }

  /* 统计卡片桌面端优化 */
  .stats-section {
    padding: var(--space-16) var(--space-8);
  }

  .stats-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
    max-width: 1200px;
    margin: 0 auto;
  }

  /* 功能展示桌面端优化 */
  .features-section {
    padding: var(--space-16) var(--space-8);
  }

  .features-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-10);
