# SmellPin 生产环境配置示例
# 请复制此文件为 .env.production 并填入实际值

# 应用配置
NODE_ENV=production
PORT=3000
APP_NAME=SmellPin
APP_VERSION=1.0.0
APP_URL=https://your-domain.com

# 数据库配置 (请替换为强密码)
DB_PASSWORD=SmellPin_DB_2024_SecurePassword123!
DATABASE_URL=postgresql://smellpin:${DB_PASSWORD}@postgres:5432/smellpin_prod

# Redis配置 (请替换为强密码)
REDIS_PASSWORD=SmellPin_Redis_2024_SecurePassword456!
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT密钥 (请生成一个强密钥，至少32字符)
JWT_SECRET=SmellPin_JWT_Secret_Key_2024_Very_Secure_Random_String_789!
JWT_EXPIRES_IN=7d

# Stripe支付配置 (请填入实际的Stripe密钥)
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_actual_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_actual_stripe_webhook_secret_here

# CDN配置 (可选，用于文件存储)
CDN_BASE_URL=https://cdn.your-domain.com
CDN_ACCESS_KEY=your_cdn_access_key_here
CDN_SECRET_KEY=your_cdn_secret_key_here
CDN_BUCKET=smellpin-uploads
CDN_REGION=us-east-1

# 邮件服务配置 (可选，用于发送通知邮件)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=SmellPin

# 监控配置
GRAFANA_PASSWORD=SmellPin_Grafana_2024_SecurePassword!
PROMETHEUS_RETENTION=15d

# SSL证书路径 (如果使用HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=10

# 安全配置
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 地图服务配置
# OpenStreetMap + Mapbox (主要地图服务)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_production_mapbox_access_token_here
NEXT_PUBLIC_OSM_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# 通知配置 (可选，用于部署通知)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url